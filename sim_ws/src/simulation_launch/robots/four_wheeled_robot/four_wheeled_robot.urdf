<?xml version="1.0"?>
<robot name="four_wheeled_robot">
    <!-- Base Frame -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="2 0.05 0.05"/> <!-- Long side -->
            </geometry>
            <origin rpy="0 0 0" xyz="0 0.475 0"/>
            <material name="aluminum"/>
        </visual>
        <visual>
            <geometry>
                <box size="2 0.05 0.05"/> <!-- Long side -->
            </geometry>
            <origin rpy="0 0 0" xyz="0 -0.475 0"/>
            <material name="aluminum"/>
        </visual>
        <visual>
            <geometry>
                <box size="0.9 0.05 0.05"/> <!-- Short side -->
            </geometry>
            <origin rpy="0 0 1.5708" xyz="0.975 0 0"/>
            <material name="aluminum"/>
        </visual>
        <visual>
            <geometry>
                <box size="0.9 0.05 0.05"/> <!-- Short side -->
            </geometry>
            <origin rpy="0 0 1.5708" xyz="-0.975 0 0"/>
            <material name="aluminum"/>
        </visual>
        <inertial>
            <mass value="10"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <!-- Wheel Modules -->
    <link name="wheel_module_front_left">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.5"/> <!-- Vertical cylinder -->
            </geometry>
            <origin rpy="0 0 0" xyz="0.975 0.475 -0.25"/>
            <material name="aluminum"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <link name="wheel_module_front_right">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.5"/> <!-- Vertical cylinder -->
            </geometry>
            <origin rpy="0 0 0" xyz="0.975 -0.475 -0.25"/>
            <material name="aluminum"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <link name="wheel_module_rear_left">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.5"/> <!-- Vertical cylinder -->
            </geometry>
            <origin rpy="0 0 0" xyz="-0.975 0.475 -0.25"/>
            <material name="aluminum"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <link name="wheel_module_rear_right">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.5"/> <!-- Vertical cylinder -->
            </geometry>
            <origin rpy="0 0 0" xyz="-0.975 -0.475 -0.25"/>
            <material name="aluminum"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <!-- Wheels -->
    <link name="wheel_front_left">
        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 -0.275"/>
            <material name="rubber"/>
        </visual>
        <inertial>
            <mass value="0.5"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
        </inertial>
    </link>

    <link name="wheel_front_right">
        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 -0.275"/>
            <material name="rubber"/>
        </visual>
        <inertial>
            <mass value="0.5"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
        </inertial>
    </link>

    <link name="wheel_rear_left">
        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 -0.275"/>
            <material name="rubber"/>
        </visual>
        <inertial>
            <mass value="0.5"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
        </inertial>
    </link>

    <link name="wheel_rear_right">
        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 -0.275"/>
            <material name="rubber"/>
        </visual>
        <inertial>
            <mass value="0.5"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
        </inertial>
    </link>

    <!-- Joints -->
    <joint name="fixed_joint_front_left" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_module_front_left"/>
        <origin xyz="0.975 0.475 0"/>
    </joint>

    <joint name="fixed_joint_front_right" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_module_front_right"/>
        <origin xyz="0.975 -0.475 0"/>
    </joint>

    <joint name="fixed_joint_rear_left" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_module_rear_left"/>
        <origin xyz="-0.975 0.475 0"/>
    </joint>

    <joint name="fixed_joint_rear_right" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_module_rear_right"/>
        <origin xyz="-0.975 -0.475 0"/>
    </joint>

    <joint name="continuous_joint_front_left" type="continuous">
        <parent link="wheel_module_front_left"/>
        <child link="wheel_front_left"/>
        <origin xyz="0 0 -0.25"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="continuous_joint_front_right" type="continuous">
        <parent link="wheel_module_front_right"/>
        <child link="wheel_front_right"/>
        <origin xyz="0 0 -0.25"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="continuous_joint_rear_left" type="continuous">
        <parent link="wheel_module_rear_left"/>
        <child link="wheel_rear_left"/>
        <origin xyz="0 0 -0.25"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="continuous_joint_rear_right" type="continuous">
        <parent link="wheel_module_rear_right"/>
        <child link="wheel_rear_right"/>
        <origin xyz="0 0 -0.25"/>
        <axis xyz="0 0 1"/>
    </joint>
</robot>
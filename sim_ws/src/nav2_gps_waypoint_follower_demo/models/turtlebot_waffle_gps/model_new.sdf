<?xml version="1.0"?>
<sdf version="1.6">
  <model name="robot">
    <pose>0 0 0 0 0 0</pose>

    <!-- Base footprint -->
    <link name="base_footprint">
      <pose>0 0 0 0 0 0</pose>
    </link>

    <!-- Base link -->
    <link name="base_link">
      <pose>0 0 1.1 0 0 0</pose>
    </link>

    <joint name="base_joint" type="fixed">
      <parent>base_footprint</parent>
      <child>base_link</child>
      <pose>0 0 1.1 0 0 0</pose>
    </joint>

    <!-- Chassis -->
    <link name="chassis">
      <pose>0 0 0.15 0 0 0</pose>
      <inertial>
        <mass>30.0</mass>
        <inertia>
          <ixx>5.85</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>22.725</iyy>
          <iyz>0</iyz>
          <izz>28.125</izz>
        </inertia>
      </inertial>
      <collision name="chassis_collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>3 1.5 0.3</size>
          </box>
        </geometry>
      </collision>
      <visual name="chassis_visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>3 1.5 0.3</size>
          </box>
        </geometry>
        <material>
          <ambient>0.5 0.5 0.5 1</ambient>
          <diffuse>0.5 0.5 0.5 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
          <emissive>0 0 0 1</emissive>
        </material>
      </visual>
    </link>

    <joint name="chassis_joint" type="fixed">
      <parent>base_link</parent>
      <child>chassis</child>
      <pose>0 0 0.15 0 0 0</pose>
    </joint>

    <!-- Wheel assemblies -->
    <link name="front_left">
      <pose>1.2 0.6 0 0 0 0</pose>
    </link>
    <link name="front_right">
      <pose>1.2 -0.6 0 0 0 0</pose>
    </link>
    <link name="rear_left">
      <pose>-1.2 0.6 0 0 0 0</pose>
    </link>
    <link name="rear_right">
      <pose>-1.2 -0.6 0 0 0 0</pose>
    </link>

    <joint name="FL_joint" type="fixed">
      <parent>base_link</parent>
      <child>front_left</child>
      <pose>1.2 0.6 0 0 0 0</pose>
    </joint>
    <joint name="FR_joint" type="fixed">
      <parent>base_link</parent>
      <child>front_right</child>
      <pose>1.2 -0.6 0 0 0 0</pose>
    </joint>
    <joint name="RL_joint" type="fixed">
      <parent>base_link</parent>
      <child>rear_left</child>
      <pose>-1.2 0.6 0 0 0 0</pose>
    </joint>
    <joint name="RR_joint" type="fixed">
      <parent>base_link</parent>
      <child>rear_right</child>
      <pose>-1.2 -0.6 0 0 0 0</pose>
    </joint>

    <!-- IMU link -->
    <link name="imu_link">
      <pose>0 0 0.1 0 0 0</pose>
    </link>
    <joint name="imu_joint" type="fixed">
      <parent>base_link</parent>
      <child>imu_link</child>
      <pose>0 0 0.1 0 0 0</pose>
    </joint>

    <!-- GPS link -->
    <link name="gps_link">
      <pose>0 0 0 0 0 0</pose>
    </link>
    <joint name="gps_joint" type="fixed">
      <parent>base_link</parent>
      <child>gps_link</child>
      <pose>0 0 0 0 0 0</pose>
    </joint>

    <!-- Lidar link -->
    <link name="base_scan">
      <pose>1.5 0 -0.2 0 0 0</pose>
      <inertial>
        <mass>0.114</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <collision name="lidar_collision">
        <pose>0.015 0 -0.0065 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.055</radius>
            <length>0.0315</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="lidar_visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://turtlebot3_common/meshes/lds.dae</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
          <emissive>0 0 0 1</emissive>
        </material>
      </visual>
    </link>

    <joint name="scan_joint" type="fixed">
      <parent>base_link</parent>
      <child>base_scan</child>
      <pose>1.5 0 -0.2 0 0 0</pose>
    </joint>

    <!-- Define the wheel modules -->
    <!-- Refer to the wheel assembly macro for detailed information -->
    <!-- Example of a wheel module for front_left -->

    <link name="front_left_wheel">
      <pose>1.2 0.6 -0.4 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.06</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.06</iyy>
          <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
          <emissive>0 0 0 1</emissive>
        </material>
      </visual>
    </link>

    <joint name="front_left_wheel_joint" type="revolute">
      <parent>front_left</parent>
      <child>front_left_wheel</child>
      <pose>0 0 -0.4 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Repeat similar definitions for front_right, rear_left, rear_right -->

    <!-- Example of an additional sensor -->
    <!-- Placeholder for IMU sensor -->
    <sensor name="imu_sensor" type="imu">
      <pose>0 0 0.1 0 0 0</pose>
      <always_on>1</always_on>
      <update_rate>50</update_rate>
      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
      <plugin name="imu_plugin" filename="libgazebo_ros_imu.so">
        <ros>
          <remapping>~/out:=imu/data</remapping>
        </ros>
        <update_rate>50</update_rate>
      </plugin>
    </sensor>

  </model>
</sdf>
